{
	"name": "@oglofus/drizzle-events",
	"version": "0.0.8",
	"description": "A lightweight, strongly-typed event management library for Drizzle ORM.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./sqlite": {
			"types": "./dist/sqlite/index.d.ts",
			"import": "./dist/sqlite/index.js",
			"default": "./dist/sqlite/index.js"
		},
		"./d1": {
			"types": "./dist/d1/index.d.ts",
			"import": "./dist/d1/index.js",
			"default": "./dist/d1/index.js"
		},
		"./pg": {
			"types": "./dist/pg/index.d.ts",
			"import": "./dist/pg/index.js",
			"default": "./dist/pg/index.js"
		},
		"./base": {
			"types": "./dist/base/index.d.ts",
			"import": "./dist/base/index.js",
			"default": "./dist/base/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc",
		"test": "npm run build && node --test",
		"prepublishOnly": "npm run build"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oglofus/drizzle-events.git"
	},
	"bugs": {
		"url": "https://github.com/oglofus/drizzle-events/issues"
	},
	"homepage": "https://github.com/oglofus/drizzle-events#readme",
	"keywords": [
		"drizzle",
		"drizzle-orm",
		"plugin",
		"event-manager",
		"events",
		"event-emitter",
		"event-handling",
		"typescript",
		"javascript",
		"type-safe",
		"strongly-typed",
		"lightweight",
		"event-driven",
		"pub-sub",
		"observer-pattern"
	],
	"author": "oglofus <> (https://oglofus.com/)",
	"license": "ISC",
	"private": false,
	"devDependencies": {
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@oglofus/event-manager": "^0.0.3",
		"drizzle-orm": "^0.45.1"
	}
}
